{
    "name": "gf_playwright",
    "version": "1.0.1",
    "description": "",
    "main": "dist/main.js",
    "scripts": {
        "test": "electron-builder -w",
        "testDir": "electron-builder --dir",
        "dev": "npx ts-node src/electron/crawler/index.ts",
        "build": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "build:F": "cd src/frontend && npm run build && mkdir ../../dist/frontend && mv dist/* ../../dist/frontend",
        "deploy": "rm -rf release && npm run build && electron-builder",
        "deploy:W": "rm -rf app-win32-x64 && npm run build && npm i && npm run build:F && electron-packager . app --platform=win32 --arch=x64 ",
        "deploy:WB": "rm -rf release && npm run build && npm i && npm run build:F && electron-builder -w",
        "deploy:M": "rm -rf app-darwin-x64 && npm run build && npm run build:F && electron-packager . app --platform=darwin --arch=x64 ",
        "deploy:MB": "rm -rf release && npm run build && npm run build:F && electron-builder -m",
        "W": "rm -rf node_modules && npm i  && rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && electron --max-old-space-size=4096 dist/main.js",
        "M": " rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && electron --max-old-space-size=4096 dist/main.js",
        "linux": "rm -rf node_modules && npm install --platform=win32 --arch=x64 sharp",
        "publish": "electron-forge publish"
    },
    "build": {
        "appId": "robot",
        "productName": "robot",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        },
        "mac": {
            "category": "your.app.category"
        }
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "outsider987",
                            "name": "GF_playwright"
                        },
                        "prerelease": false,
                        "draft": true
                    }
                }
            ]
        }
    },
    "publish": {
        "provider": "github",
        "relaseType": "release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/outsider987/GF_playwright.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/outsider987/GF_playwright/issues"
    },
    "homepage": "https://github.com/outsider987/GF_playwright#readme",
    "dependencies": {
        "@electron-forge/cli": "^6.1.1",
        "@electron-forge/publisher-github": "^6.1.1",
        "@techstark/opencv-js": "^4.7.0-release.1",
        "@tensorflow/tfjs": "^4.2.0",
        "@types/electron": "^1.6.10",
        "@types/opencc-js": "^1.0.0",
        "axios": "^1.3.5",
        "csvtojson": "^2.0.10",
        "electron-updater": "^5.3.0",
        "moment": "^2.29.4",
        "natural": "^6.2.0",
        "node-opencv": "^0.0.2-security",
        "node-tesseract-ocr": "^2.2.1",
        "opencc-js": "^1.0.5",
        "opencv4nodejs-prebuilt-install": "^4.1.146",
        "playwright": "^1.32.2",
        "sharp": "^0.32.0",
        "spacy": "^0.0.4",
        "tesseract.js": "^4.0.3",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.9.5",
        "xlsx": "^0.18.5",
        "zh-convert": "^1.0.1"
    },
    "opencv4nodejs": {
        "disableAutoBuild": "1"
    },
    "devDependencies": {
        "@types/node": "^18.15.11",
        "dotenv": "^16.0.3",
        "electron": "^24.1.2",
        "electron-builder": "^23.6.0",
        "tsc-alias": "^1.8.5"
    },
    "optionalDependencies": {
        "fsevents": "^2.3.2"
    }
}
